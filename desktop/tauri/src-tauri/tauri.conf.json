{
    "productName": "qBit Manage",
    "version": "0.1.0",
    "identifier": "com.qbitmanage.desktop",
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "devUrl": "http://localhost:8080",
        "frontendDist": null
    },
    "bundle": {
        "active": true,
        "category": "Utility",
        "icon": [
            "../../../icons/qbm_logo.icns",
            "../../../icons/qbm_logo.ico",
            "../../../icons/qbm_logo.png"
        ],
        "targets": [
            "deb",
            "msi",
            "nsis",
            "app",
            "dmg"
        ],
        "resources": [
            "bin/*"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "libgtk-3-0",
                    "libayatana-appindicator3-1",
                    "libwebkit2gtk-4.1-0"
                ]
            }
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "nsis": {
                "displayLanguageSelector": true
            }
        },
        "macOS": {
            "frameworks": [],
            "minimumSystemVersion": "10.13"
        }
    },
    "app": {
        "windows": [
            {
                "title": "qBit Manage",
                "width": 1100,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "visible": true
            }
        ],
        "trayIcon": {
            "iconPath": "../../../icons/qbm_logo.png",
            "iconAsTemplate": false
        },
        "security": {
            "csp": null
        },
        "withGlobalTauri": false
    }
}
